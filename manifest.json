{
    "name": "Internet Cancer Remover",
    "description" : "Enhance your Internet browsing by replacing or removing all or part of emojis in websites",
    "version": "0.4",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "css": ["content/style.css"],
            "js": ["content/config.js", "content/main.js"]
        }
    ],
    "options_ui": {
        "page": "options/options.html",
        "chrome_style": false
    },
    "permissions": [
        "storage"
    ]
}
